{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build//lib/torcs/torcs-bin",
            "args": ["-L", "${workspaceFolder}/build/lib/torcs", "-D", "${workspaceFolder}/build/share/games/torcs"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/share/games/torcs",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/lib/torcs/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb",
            //"miDebuggerArgs": "-l /home/jokke/.torcs",
            "logging": { "trace": true, "traceResponse": true }
        }
    ]
}